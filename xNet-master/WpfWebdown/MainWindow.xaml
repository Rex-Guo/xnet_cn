<Window x:Class="WpfWebdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWebdown"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" >
    <Grid>
        <Grid Margin="0,0,0,264"  Grid.Row="1" Name="header" >
            <TextBox x:Name="UriText" HorizontalAlignment="Left" Height="23" Margin="21,17,0,0" TextWrapping="Wrap" Text="http://icp.chinaz.com/provinces" VerticalAlignment="Top" Width="383"/>
            <Button x:Name="Down" Content="Down" HorizontalAlignment="Left" Margin="416,17,0,0" VerticalAlignment="Top" Width="75" Height="27" Click="UrlDown_Click"/>
     
        </Grid>
        
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="419,274,0,0" VerticalAlignment="Top" Width="75" Height="27"/>

        <Grid Height="214" Margin="11,58,108,0" VerticalAlignment="Top">
            <RichTextBox x:Name="Content" Margin="11,0,5,6" Height="204" VerticalAlignment="Bottom">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="Content"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Grid>
    </Grid>
</Window>
